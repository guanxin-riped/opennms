<blueprint
        xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.osgi.org/xmlns/blueprint/v1.0.0
        https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
">
    <reference id="restClient" interface="org.opennms.minion.core.api.RestClient" availability="mandatory"/>

    <bean id="configProxyAnnotationBeanPostProcessor" class="org.opennms.features.persistence.config.ConfigProxyAnnotationBeanPostProcessor">
        <property name="restClient" ref="restClient" />
    </bean>
    <service ref="configProxyAnnotationBeanPostProcessor" interface="org.springframework.beans.factory.config.BeanPostProcessor">
        <service-properties>
            <entry key="name" value="configProxyAnnotationBeanPostProcessor"/>
        </service-properties>
    </service>
</blueprint>